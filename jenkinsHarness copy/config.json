{
    "pipeline":
    {
        "template": "./templates/pipeline.json",
        "stage":
        {
            "CI":
            {
                "template": "./templates/CI/stage.json",
                "step":
                {
                    "GitClone":
                    {
                        "template": "./templates/CI/step_GitClone.json",
                        "component_function": "extract_GitClone_components",
                        "build_function": "build_step_GitClone"
                    },
                    "Run":
                    {
                        "template": "./templates/CI/step_Run.json",
                        "component_function": "extract_Run_components",
                        "build_function": "build_step_Run"
                    },
                    "SaveCacheGCS":
                    {
                        "template": "./templates/CI/step_SaveCacheGCS.json",
                        "component_function": "extract_SaveCacheGCS_components",
                        "build_function": "build_step_SaveCacheGCS"
                    }
                }
            },
            "Custom":
            {
                "template": "./templates/Custom/stage.json",
                "step":
                {
                    "Email":
                    {
                        "template": "./templates/Custom/step_Email.json",
                        "component_function": "extract_Email_components",
                        "build_function": "build_step_Email"
                    },
                    "ShellScript":
                    {
                        "template": "./templates/Custom/step_ShellScript.json",
                        "component_function": "extract_ShellScript_components",
                        "build_function": "build_step_ShellScript"
                    }
                }
            }            
        }
    }
}